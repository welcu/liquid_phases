<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= stylesheet_assets(:editor) %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.0/jquery.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="/ckeditor/ckeditor.js" type="text/javascript" charset="utf-8"></script>
    <script src="/ckeditor/adapters/jquery.js" type="text/javascript"></script>
    
    <!-- Code mirror -->
    <link rel="stylesheet" href="/codemirror/lib/codemirror.css">
    <link rel="stylesheet" href="/codemirror/mode/xml/xml.css"> 
    <link rel="stylesheet" href="/codemirror/mode/css/css.css">
    <link rel="stylesheet" href="/codemirror/mode/javascript/javascript.css">
    <script src="/codemirror/lib/codemirror.js"></script> 
    <script src="/codemirror/lib/overlay.js"></script> 
    <script src="/codemirror/mode/xml/xml.js"></script>
    <script src="/codemirror/mode/css/css.js"></script>
    <script src="/codemirror/mode/javascript/javascript.js"></script>
    <script src="/codemirror/mode/htmlmixed/htmlmixed.js"></script> 
    
    <%= javascript_assets(:editor) %>
    <%= csrf_meta_tag %>    
  </head>
  <body>
    <%#= title %>
    <%= link_to 'Save Changes', '#save', :id => 'saveButton', :style => 'float:right;', :class => 'disabled' %>
    <nav>
      <%= link_to 'code', '#code' %>
      |
      <%= link_to 'design', '#design' %>
      |
      <%= link_to 'preview', '#preview' %>
    </nav>
    <br />
    <div id="canvas"></div><!-- #canvas -->
  </body>
</html>
